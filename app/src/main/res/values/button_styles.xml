<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlueButtonStyle" parent="Widget.Material3.Button">

        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="rippleColor">@color/dark_blue</item>
        <item name="shapeAppearance">@style/ShapeAppearance.BlueButton</item>

        <item name="android:textAppearance">@style/TextAppearance.AppCompat.ButtonText1</item>

    </style>

    <style name="GreenButtonStyle" parent="Widget.Material3.Button">

        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green</item>
        <item name="rippleColor">@color/dark_green</item>
        <item name="shapeAppearance">@style/ShapeAppearance.GreenButton</item>
        <item name="android:insetTop">7dp</item>
        <item name="android:insetBottom">7dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.ButtonText2</item>
    </style>

    <style name="ShapeAppearance.GreenButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="cornerSize">50dp</item>
    </style>

    <style name="ShapeAppearance.BlueButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="cornerSize">8dp</item>
    </style>


</resources>